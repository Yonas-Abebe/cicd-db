		<secure-properties:encrypt algorithm="Blowfish" />
	</secure-properties:config>	<http:listener-config name="HTTP_Listener_config" doc:name="HTTP Listener config" doc:id="de4f0851-3418-4208-9371-1351ae47b729" >
